    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#161616</item>
        <item name="colorPrimaryDark">#161616</item>
        <item name="colorAccent">#E20C0C</item>
    </style>



    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonWhiteTransaparent">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/white_transparent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>
    <style name="ButtonBlackTransaparent">
        <item name="android:textColor">@color/background</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/black_transparent_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>
    <style name="ButtonAccent">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>
    <style name="ButtonBlack">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@color/background</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>
    <style name="ButtonDisabled">
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@color/darkGrey</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>
    <style name="chatbox">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:elevation">1dp</item>
        <item name="android:translationZ">1dp</item>
        <item name="android:background">@drawable/chatbox_textview</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/space_mono</item>
    </style>

</resources>
