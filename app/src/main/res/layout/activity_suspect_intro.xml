<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SuspectIntroActivity"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Suspect"
            android:fontFamily="@font/advent_pro_bold"
            android:textSize="32sp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="24dp"/>
        <ImageView
            android:id="@+id/suspectImage"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/suspect_1"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:fontFamily="@font/space_mono"
                android:textColor="@color/grey"
                android:layout_marginTop="24dp"/>
            <TextView
                android:id="@+id/suspectName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vijay Johnson Thakur"
                android:fontFamily="@font/space_mono"
                android:textColor="@color/white"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Why he is a suspect"
                android:fontFamily="@font/space_mono"
                android:textColor="@color/grey"
                android:layout_marginTop="24dp"/>
            <TextView
                android:id="@+id/suspectIntro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="He is victim Raghu's boss."
                android:fontFamily="@font/space_mono"
                android:textColor="@color/white"/>
        </LinearLayout>

        <Button
            android:id="@+id/talkToSuspect"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            style="@style/ButtonAccent"
            android:text="Let's talk"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"/>
    </LinearLayout>


</ScrollView>